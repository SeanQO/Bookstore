<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="420.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="320.0" spacing="25.0">
               <children>
                  <Label fx:id="bookNameTxF" alignment="CENTER" prefHeight="100.0" prefWidth="400.0" text="Book name" wrapText="true">
                     <font>
                        <Font size="44.0" />
                     </font>
                  </Label>
                  <Label fx:id="bookLocationTxF" alignment="CENTER" prefHeight="100.0" prefWidth="400.0" text="Book location" wrapText="true">
                     <font>
                        <Font size="44.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="120.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#previousBook" prefHeight="50.0" prefWidth="100.0" text="Prev. Book" />
                  <Button mnemonicParsing="false" onAction="#nextBook" prefHeight="50.0" prefWidth="100.0" text="Next Book" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
